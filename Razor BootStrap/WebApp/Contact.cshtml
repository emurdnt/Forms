@{
    Layout = "~/_BootstrapLayout.cshtml";
}

<h1 class="jumbotron">Basic Form Example - Bootstrap</h1>

<div class="row">
       <div class="col-md-6">
           <h2>Basic Example</h2>
       </div>
    <div class="col-md-6">

        <form>
            <div class="form-group">
                <label for="exampleInputEmail"> Email</label>
                <input type="password" class="form-control" id="exampleInputEmail" placeholder="Email" />
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1"> Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" />
            </div>
            <div class="form-group">
                <label for="exampleInputFile">File</label>
                <input type="file"  id="exampleInputFile" placeholder="Email" />
                <p class="help-block"> Ecxample block-level help text here</p>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox"/> Check me out
                </label>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>


        </form>
    </div>
</div>